<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_slideshow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="30sp"
        android:text="Recipient's Information"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_slideshow"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp"
        android:textColor="#1D4669"
        android:textStyle="bold"
        android:text="Name"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Name_R"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/textView14"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_below="@+id/Name_R"
        android:textStyle="bold"
        android:layout_marginHorizontal="30dp"
        android:textColor="#1D4669"
        android:layout_marginTop="30dp"
        android:text="Phone number"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Phno_R"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/textView15"
        android:ems="10"
        android:inputType="phone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView16"
        android:layout_below="@+id/Phno_R"
        android:layout_marginHorizontal="30dp"
        android:textColor="#1D4669"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="Email address"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_R"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/textView16"
        android:ems="10"
        android:inputType="textEmailAddress"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView17"
        android:layout_below="@+id/email_R"
        android:layout_marginHorizontal="30dp"
        android:textColor="#1D4669"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:text="Postal Address"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addr_R"
        android:layout_marginHorizontal="30dp"
        android:layout_below="@id/textView17"
        android:ems="10"
        android:inputType="textPostalAddress"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addr_R"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:text="Save"
        android:textStyle="bold"
        android:id="@+id/save_R"
        android:textColor="@color/colorPrimary"
        android:onClick="onSaveClickR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addr_R"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="150dp"
        android:text="Clear"
        android:id="@+id/Clear_R"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:onClick="onClearClickR"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addr_R"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="30dp"
        android:text="Home"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:id="@+id/Home"
        android:onClick="onHomeClickR"/>

</RelativeLayout>